@model ProductDto
@{
    ViewData["Title"] = "Update Product Stock";
}

<h1>Update Product Stock</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="productId"></label>
        <input class="form-control" asp-for="productId" readonly />
    </div>
    <div class="form-group">
        <label asp-for="name"></label>
        <input class="form-control" asp-for="name" readonly />
    </div>
    <div class="form-group">
        <label asp-for="description"></label>
        <input class="form-control" asp-for="description" />
    </div>
    <div class="form-group">
        <label asp-for="price"></label>
        <input class="form-control" asp-for="price" readonly />
    </div>
    <div class="form-group">
        <span>Current stock is @Model.stock.Stock . Add a number to increase Stock</span>
        <label asp-for="stock.Stock"></label>
        <input class="form-control" asp-for="stock.Stock" value="0" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

@if (ViewBag.Result == "Success")
{
    <h2>Reservation</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>ID</th><th>Name</th><th>Description</th><th>Price</th><th>Stock</th></tr></thead>
        <tbody>
            <tr>
                <td>@Model.productId</td>
                <td>@Model.name</td>
                <td>@Model.description</td>
                <td>@Model.price</td>
                <td>@Model.stock.Stock</td>

            </tr>
        </tbody>
    </table>
}
